// Testing new syntax features

print("=== Variable Declarations ===")

// Type inference with mutability
var x = 42
var name = "Carbon"
var flag = true

print("var x = " + toString(x))
print("var name = " + name)
print("var flag = " + toString(flag))

// Type inference with immutability (let without type)
let y = 100
let text = "Hello"

print("let y = " + toString(y))
print("let text = " + text)

// Typed constants (immutable)
let int z = 200
let string greeting = "Hi there"

print("let int z = " + toString(z))
print("let string greeting = " + greeting)

print("=== Multi-parameter Lambda Functions ===")

// Multi-parameter lambda functions
let add = (x, y) => x + y
let multiply = (a, b, c) => a * b * c

print("add(5, 3) = " + toString(add(5)(3)))
print("multiply(2, 3, 4) = " + toString(multiply(2)(3)(4)))

// Using with higher-order functions
int[] numbers = [1, 2, 3, 4, 5]
let sum = fold((acc, x) => acc + x)(0)(numbers)

print("sum of numbers: " + toString(sum))

print("=== All New Syntax Tests Complete ===")
