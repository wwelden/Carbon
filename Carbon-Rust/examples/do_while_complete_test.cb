print("=== Do-While Loop Tests ===")

print("Test 1: Basic do-while loop")
let counter = 0
do {
    print("Loop iteration")
    counter++
} while (counter < 3)
print("Loop completed")

print("Test 2: Do-while that executes once")
let x = 5
do {
    print("This executes once")
    x = 10
} while (x < 5)
print("Test 2 completed")

print("Test 3: Do-while with complex condition")
let sum = 0
let i = 1
do {
    sum += i
    print("Adding number")
    i++
} while (sum < 10)
print("Test 3 completed")

print("All do-while tests passed!")
